{
  "compilerOptions": {
    "checkJs": true,
    "noEmit": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "paths": {
      "@blog/*": ["./tests/fixtures/*"]
    }
  },
  "include": [
    "**/*.js",
    "**/*.svelte"
  ],
  "exclude": [
    "node_modules",
    ".svelte-kit",
    "dist"
  ]
}
